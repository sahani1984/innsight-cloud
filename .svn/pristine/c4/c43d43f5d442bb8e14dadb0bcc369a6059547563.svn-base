header {
    background: #fff;
    width: 100%;
    display: flex;
    box-shadow: 0px 0px 20px #ddd;
    padding: 0 15px;
    .kt-header__brand-logo {
        padding: 8px 0;
    }

    #tabs_nav {
        display: flex;
        align-items: flex-end;
    }

}

.kt-header__topbar .kt-header__topbar-item.kt-header__topbar-item--user .kt-header__topbar-username{color:#333;}
.dropdown{
 position:relative;
 &.notificaiton_nav{
     .dropdown-menu{
        position: absolute; right:0; left:auto;
     }
     .dropdown-menu{
         .tab-content{
             .tab-pane{
                 max-height:auto;
             }
         }
     }
 }
 &.quick_user_action{
     .dropdown-menu{
        position: absolute; right:0; left:auto;
     }
 }
}

.logoutPanel{    position: absolute;
    right: 0;
    top: 100%;
    padding: 15px;
    min-width:100px;
    z-index: 9;
    background: #fff;
    box-shadow: 0px 0px 10px #ccc;
    min-height: 60px;
    border-radius: 4px;
    display:flex;
    align-items:center; font-weight:500;
}